/**搜索框**/
.section{
  width:100%;
  height:80rpx;
   text-align: center; 
  vertical-align: middle;
  line-height: 80rpx;
   border-radius: 10rpx;
  /* background:rgba(200,200,200,0.5); */
  background:#fff;
  position: relative;
  margin-bottom:20rpx;
}
input.search{
  padding-top:15rpx;
  padding-right:50rpx;
   color:#A37011;
   font-size: 14pt;
}
.phcolor{
    color:#A37011;
}
.section image{
  position: absolute;
  right:20rpx;
  top:50%;
  transform: translate(0,-50%);
  width:50rpx;
  height:50rpx;
  opacity: 0.5;
}
.right-content view{
  font-size:10pt;
  margin-top:17rpx;
}
.right-content view:last-child{
  color:#C3C3C3;
}
.right-content text{
  font-size:10pt;
  margin-top:17rpx;
  color:#C3C3C3;
}
.right-content{
width:100%;
height:190rpx;
padding-left:298rpx;
padding-right:30rpx;
box-sizing: border-box;
position: absolute;
left:0;
top:50%;
transform: translate(0,-50%);
}
.right-content view{
width:100%;
 word-break: break-all;
  text-overflow: ellipsis;
  white-space: nowrap;
   overflow: hidden;
  -webkit-box-orient: vertical;
}
